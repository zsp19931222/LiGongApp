<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/ripple"
    android:layout_marginTop="@dimen/d_10"
    android:layout_marginBottom="@dimen/d_10"
    >

    <ImageView
        android:id="@+id/head_contact_image1"
        android:layout_width="@dimen/d_35"
        android:layout_height="@dimen/d_35"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/d_12"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/head_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/d_11"
        android:layout_toRightOf="@id/head_contact_image1"
        android:textColor="@color/color_dark_333333"
        android:textSize="@dimen/s_16" />

    <ImageView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/head_contact_image1"
        android:layout_marginTop="@dimen/d_10"
        android:background="@color/color_gray_999999" />
</RelativeLayout>