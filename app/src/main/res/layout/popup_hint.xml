<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hintpop_Image1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="@dimen/d_20"
            android:layout_marginRight="@dimen/d_20"
            android:background="@drawable/border_radius_white">

            <TextView
                android:id="@+id/hintpop_text_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/d_24"
                android:drawablePadding="@dimen/d_17"
                android:drawableTop="@drawable/hint"
                android:textColor="@color/color_dark_333333"
                android:textSize="@dimen/s_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:layout_below="@id/hintpop_text_hint"
                android:layout_marginTop="@dimen/d_17"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/hintpop_btn_cancle"
                    android:layout_width="@dimen/d_0"
                    android:layout_height="@dimen/d_50"
                    android:layout_weight="1"
                    android:background="@drawable/hint_btn_leftbg_selecter"
                    android:focusable="true"
                    android:text="取消"
                    android:textColor="@color/item_color_selector"
                    android:textSize="@dimen/s_14" />

                <Button
                    android:id="@+id/hintpop_btn_confirm"
                    android:layout_width="@dimen/d_0"
                    android:layout_height="@dimen/d_50"
                    android:layout_weight="1"
                    android:background="@drawable/hint_btn_rightbg_selecter"
                    android:focusable="true"
                    android:text="确定"
                    android:textColor="@color/item_color_selector"
                    android:textSize="@dimen/s_14" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/hintpop_Image2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
</RelativeLayout>