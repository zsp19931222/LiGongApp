<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_persona_bggray"
    android:orientation="vertical"
    tools:context="com.yunhuakeji.app.ui.activity.UpdataUserInfoActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/button" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:padding="@dimen/d_10"
            android:src="@drawable/back3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/d_15"
            android:text="@string/str_uddatauserifno"
            android:textColor="@color/color_white"
            android:textSize="@dimen/s_20" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_updata_handimg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/button"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <yh.app.stu_info.RoundImageView
            android:id="@+id/img_updatauserinfo_handimg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/d_9"
            android:layout_marginLeft="@dimen/d_15"
            android:layout_marginRight="@dimen/d_20"
            android:layout_marginTop="@dimen/d_9"
            android:src="@drawable/q1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_updatauserinfo_handimg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_updatauserinfo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:textSize="@dimen/s_18" />

            <TextView
                android:id="@+id/txt_updatauserinfo_userid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_updatauserinfo_name"
                android:layout_marginTop="@dimen/d_5"
                android:textColor="@color/color_white"
                android:textSize="@dimen/s_15" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="@dimen/d_10"
        android:background="@color/color_white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/d_10"
            android:text="@string/str_userinfo_phone"
            android:textColor="@color/color_black"
            android:textSize="@dimen/s_15" />

        <yh.tool.widget.ClearEditText
            android:id="@+id/ed_updatauserinfo_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/d_15"
            android:background="@color/white"
            android:inputType="number"
            android:padding="@dimen/d_10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="@dimen/d_10"
        android:background="@color/color_white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/d_10"
            android:text="@string/str_userinfo_QQ"
            android:textColor="@color/color_black"
            android:textSize="@dimen/s_15" />

        <yh.tool.widget.ClearEditText
            android:id="@+id/ed_updatauserinfo_qq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/d_15"
            android:background="@color/color_white"
            android:inputType="number"
            android:padding="@dimen/d_10" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_updatainfo_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d_40"
        android:layout_marginEnd="@dimen/d_20"
        android:layout_marginStart="@dimen/d_20"
        android:layout_marginTop="@dimen/d_65"
        android:background="@drawable/selector_personal_rounded_click"
        android:text="@string/btnOk"
        android:textColor="@color/color_white" />

</LinearLayout>