<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_persona_bggray"
    android:orientation="vertical"
    tools:context="com.yunhuakeji.app.ui.activity.DormitoryInformationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="clip_vertical"
            android:drawablePadding="@dimen/d_5"
            android:drawableStart="@drawable/ico_left"
            android:onClick="back"
            android:padding="@dimen/d_10"
            android:text="@string/str_back"
            android:textColor="@color/color_somber"
            android:textSize="@dimen/s_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/d_10"
            android:layout_marginTop="@dimen/d_10"
            android:text="@string/str_dormitory_title"
            android:textColor="@color/color_black"
            android:textSize="@dimen/s_20" />
    </RelativeLayout>

    <!--校区名称-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_44"
        android:layout_marginTop="@dimen/d_13"
        android:background="@drawable/selector_personal_click">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/d_15"
            android:drawablePadding="@dimen/d_10"
            android:drawableStart="@drawable/ico_dormitory_schollname"
            android:gravity="center_vertical"
            android:text="@string/str_dormitory_schollname"
            android:textColor="@color/color_black" />

        <TextView
            android:id="@+id/txt_dormitory_schoolname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/d_15"
            android:text="两江校区" />

    </RelativeLayout>


    <!--校栋名称-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_44"
        android:layout_marginTop="@dimen/d_1"
        android:background="@drawable/selector_personal_click">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/d_15"
            android:drawablePadding="@dimen/d_10"
            android:drawableStart="@drawable/ico_dormitory_classroom"
            android:gravity="center_vertical"
            android:text="@string/str_dormitory_scholl_classroom"
            android:textColor="@color/color_black" />

        <TextView
            android:id="@+id/txt_dormitory_classroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/d_15"
            android:text="两江校区-4栋" />

    </RelativeLayout>


    <!--寝室名称-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_44"
        android:layout_marginTop="@dimen/d_13"
        android:background="@drawable/selector_personal_click">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/d_15"
            android:drawablePadding="@dimen/d_10"
            android:drawableStart="@drawable/ico_jiaoshichaxun"
            android:gravity="center_vertical"
            android:text="@string/str_dormitory_number"
            android:textColor="@color/color_black" />

        <TextView
            android:id="@+id/txt_dormitory_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/d_15"
            android:text="1715" />

    </RelativeLayout>


    <!--寝室性别-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_44"
        android:layout_marginTop="@dimen/d_1"
        android:background="@drawable/selector_personal_click">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/d_15"
            android:drawablePadding="@dimen/d_10"
            android:drawableStart="@drawable/ico_dormitory_type"
            android:gravity="center_vertical"
            android:text="@string/str_dormitory_type"
            android:textColor="@color/color_black" />

        <TextView
            android:id="@+id/txt_dormitory_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/d_15"
            android:text="男" />

    </RelativeLayout>


    <!--床位号-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_44"
        android:layout_marginTop="@dimen/d_1"
        android:background="@drawable/selector_personal_click">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/d_15"
            android:drawablePadding="@dimen/d_10"
            android:drawableStart="@drawable/ico_dormitory_bednumber"
            android:gravity="center_vertical"
            android:text="@string/str_dormitory_bednumber"
            android:textColor="@color/color_black" />

        <TextView
            android:id="@+id/txt_dormitory_bednumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/d_15"
            android:text="1" />

    </RelativeLayout>


    <!--床位号-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_44"
        android:layout_marginTop="@dimen/d_1"
        android:background="@drawable/selector_personal_click">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/d_15"
            android:drawablePadding="@dimen/d_10"
            android:drawableStart="@drawable/ico_fee"
            android:gravity="center_vertical"
            android:text="@string/str_dormitory_shoufeibiaozun"
            android:textColor="@color/color_black" />

        <TextView
            android:id="@+id/txt_dormitory_shoufeibiaozun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/d_15"
            android:text="1200" />

    </RelativeLayout>


</LinearLayout>
