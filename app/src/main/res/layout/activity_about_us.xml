<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f6"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <com.example.app3.view.MyTitleView
        android:id="@+id/aboutus_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_48"
        app:title_bg="@color/white"
        app:title_height="@dimen/d_48"
        app:title_left_image="@drawable/back3"
        app:title_text="@string/str_about_title_v3"
        app:title_text_color="@color/color_dark_333333"
        app:title_text_size="@dimen/d_15"/>

    <ImageView
        android:id="@+id/aboutus_image_logo"
        android:layout_width="@dimen/d_100"
        android:layout_height="@dimen/d_100"
        android:layout_marginTop="@dimen/d_18"
        />

    <TextView
        android:id="@+id/aboutus_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_7"
        android:text="@string/str_about_versions_v3"
        android:textColor="@color/color_gray_999999"
        android:textSize="@dimen/d_12" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/d_10"
        android:background="@color/color_f1" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/aboutus_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_f1" />
</LinearLayout>