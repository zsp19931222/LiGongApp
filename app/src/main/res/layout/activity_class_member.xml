<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f6">

    <com.example.app3.view.MyTitleView
        android:id="@+id/cm_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_48"
        app:title_bg="@color/white"
        app:title_height="@dimen/d_48"
        app:title_left_image="@drawable/back_v3"
        app:title_text="班级成员"
        app:title_text_color="@color/color_dark_333333"
        app:title_text_size="@dimen/d_15" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cm_rec"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cm_title" />

    <com.example.app3.view.LetterView
        android:id="@+id/cm_letter_view"
        android:layout_width="@dimen/d_30"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:gravity="center" />

    <TextView
        android:id="@+id/no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawablePadding="@dimen/d_60"
        android:drawableTop="@drawable/no_data"
        android:gravity="center"
        android:textColor="@color/color_bbbbbb"
        android:textSize="@dimen/s_14" />
</RelativeLayout>