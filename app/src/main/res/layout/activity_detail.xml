<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.example.app3.view.MyTitleView
        android:id="@+id/detail_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_48"
        app:title_bg="@color/white"
        app:title_height="@dimen/d_48"
        app:title_left_image="@drawable/back3"
        app:title_text_color="@color/color_dark_333333"
        app:title_text_size="@dimen/d_15"></com.example.app3.view.MyTitleView>

    <TextView
        android:id="@+id/detail_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d_15"
        android:layout_marginTop="@dimen/d_5"
        android:layout_marginRight="@dimen/d_15"
        android:text="标题"
        android:textColor="@color/color_dark_333333"
        android:textSize="@dimen/s_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d_15"
        android:layout_marginRight="@dimen/d_15"
        android:layout_marginTop="@dimen/d_5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detail_text_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_dark_333333"
            android:textSize="@dimen/s_12" />

        <TextView
            android:id="@+id/detail_text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textColor="@color/color_gray_999999"
            android:textSize="@dimen/s_12" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/d_10"
        android:background="@color/pickerview_wheelview_textcolor_divider" />
    <TextView
        android:id="@+id/detail_text_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d_15"
        android:layout_marginTop="@dimen/d_15"
        android:layout_marginRight="@dimen/d_15"
        android:text="消息"
        android:textColor="@color/color_gray_999999"
        android:textSize="@dimen/s_14" />
</LinearLayout>