<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_persona_bggray"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="@dimen/d_15"
        android:layout_marginEnd="@dimen/d_15"
        android:layout_marginStart="@dimen/d_15"
        android:layout_marginTop="@dimen/d_10"
        android:background="@drawable/layer_list_border_circular"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <yh.app.stu_info.RoundImageView
                android:id="@+id/img_welcomestudent_hand"
                android:layout_width="@dimen/d_63"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d_14"
                android:src="@drawable/q1"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d_15"
                android:layout_marginTop="@dimen/d_15"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/d_14"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/txt_welcomestudent_noticebook"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/color_gray_666666"
                        android:textSize="@dimen/s_12" />

                    <TextView
                        android:id="@+id/txt_welcomestudent_helper"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/d_8"
                        android:gravity="center"
                        android:textColor="@color/color_gray_666666"
                        android:textSize="@dimen/s_12"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/img_welcomestudent_erweima"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/d_15"
                        android:src="@drawable/ico_welcomestuden_erweima" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_welcomestudent_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/d_13"
                    android:layout_marginTop="10dp"
                    android:drawableEnd="@drawable/ico_woman"
                    android:drawablePadding="@dimen/d_5"
                    android:text="--"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/s_18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_welcomestudent_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_welcomestudent_name"
                    android:layout_marginStart="@dimen/d_13"
                    android:layout_marginTop="@dimen/d_9"
                    android:drawablePadding="@dimen/d_5"
                    android:drawableStart="@drawable/ico_school"
                    android:text="--"
                    android:textColor="@color/color_back" />

                <TextView
                    android:id="@+id/txt_welcomestudent_major"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_welcomestudent_school"
                    android:layout_marginStart="@dimen/d_13"
                    android:layout_marginTop="@dimen/d_9"
                    android:drawablePadding="@dimen/d_5"
                    android:drawableStart="@drawable/ico_welcomestdent_major"
                    android:ellipsize="middle"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxLength="18"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="--"
                    android:textColor="@color/color_somber" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_15"
            android:background="#00000000"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_welcomestudent_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d_25"
                android:drawableEnd="@drawable/ico_welcomestudent_undone"
                android:drawablePadding="@dimen/d_2"
                android:ellipsize="end"
                android:maxEms="7"
                android:maxLines="1"
                android:singleLine="true"
                android:text="缴费信息:--"
                android:textColor="@color/color_somber"
                android:textSize="@dimen/s_14" />

            <TextView
                android:id="@+id/txt_welcomestudent_dorm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d_15"
                android:drawableEnd="@drawable/ico_welcomestudent_undone"
                android:drawablePadding="@dimen/d_2"
                android:ellipsize="end"
                android:maxEms="7"
                android:maxLines="1"
                android:text="寝室:--"
                android:textColor="@color/color_somber"
                android:textSize="@dimen/s_14" />

            <TextView
                android:id="@+id/txt_welcomestudent_ems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/d_15"
                android:layout_marginStart="@dimen/d_15"
                android:drawableEnd="@drawable/ico_welcomestudent_undone"
                android:drawablePadding="@dimen/d_2"
                android:ellipsize="end"
                android:maxEms="7"
                android:maxLines="1"
                android:singleLine="true"
                android:text="EMS:--"
                android:textColor="@color/color_somber"
                android:textSize="@dimen/s_14" />
        </LinearLayout>

        <!-- 报道总进度 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_8"
            android:background="#00000000"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/d_17"
                android:text="@string/str_welcomestudent_allprocess"
                android:textColor="@color/color_black"
                android:textSize="@dimen/s_16"
                android:textStyle="bold" />

            <yh.tool.widget.ProgressView
                android:id="@+id/pv_welcomestudent_progress"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/d_5" />

            <ImageView
                android:id="@+id/img_welcomestudent_quiz"
                android:layout_width="@dimen/d_15"
                android:layout_height="@dimen/d_15"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/d_5"
                android:src="@drawable/ico_welcomestudent_quiz" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>