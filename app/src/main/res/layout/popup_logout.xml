<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/hintpop_rel"
    android:background="#66000000">

        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_20"
            android:layout_marginRight="@dimen/d_20"
            android:background="@drawable/border_radius_white">

            <TextView
                android:id="@+id/hintpop_text_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/d_24"
                android:drawablePadding="@dimen/d_17"
                android:drawableTop="@drawable/hint"
                android:textColor="@color/color_dark_333333"
                android:textSize="@dimen/d_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_50"
                android:layout_below="@id/hintpop_text_hint"
                android:layout_marginTop="@dimen/d_17"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/hintpop_btn_confirm"
                    android:layout_width="@dimen/d_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/border_radius_f2f2f2"
                    android:focusable="true"
                    android:text="确定"
                    android:textColor="@color/item_color_selector"
                    android:textSize="@dimen/d_14" />
            </LinearLayout>
        </RelativeLayout>
</RelativeLayout>