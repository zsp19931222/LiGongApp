<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_persona_bggray"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/color_white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_flow_erweima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="-10dp"
            android:layout_marginEnd="@dimen/d_14"
            android:layout_marginTop="@dimen/d_15"
            android:src="@drawable/ico_welcomestuden_erweima" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_flow_hand"
                android:layout_width="@dimen/d_63"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d_14"
                android:visibility="gone"
                android:src="@drawable/q1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d_15"
                >

                <TextView
                    android:id="@+id/txt_flow_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/d_13"
                    android:drawableEnd="@drawable/ico_woman"
                    android:drawablePadding="@dimen/d_5"
                    android:text="--"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/s_18"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txt_flow_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_flow_name"
                    android:layout_marginStart="@dimen/d_13"
                    android:layout_marginTop="@dimen/d_9"
                    android:drawablePadding="@dimen/d_5"
                    android:textColor="@color/color_back"
                    android:drawableStart="@drawable/ico_school"
                    android:text="--" />

                <TextView
                    android:id="@+id/txt_flow_major"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_flow_school"
                    android:layout_marginStart="@dimen/d_13"
                    android:layout_marginTop="@dimen/d_9"
                    android:drawablePadding="@dimen/d_5"
                    android:drawableStart="@drawable/ico_welcomestdent_major"
                   android:ellipsize="middle"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxLength="18"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="--"
                    android:textColor="@color/color_somber"
                    />


            </RelativeLayout>


        </LinearLayout>




       <!--报道总进度-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_15"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_flow_flowprsonage"
                android:layout_marginStart="@dimen/d_18"
                android:layout_marginTop="@dimen/prtodip"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:textSize="@dimen/s_16"
                />
            <yh.tool.widget.ProgressView
                android:id="@+id/pv_flow_progress"
                android:layout_gravity="center_vertical"
                android:layout_width="220dp"
                android:layout_marginTop="@dimen/fd_5"
                android:layout_marginStart="@dimen/d_5"
                android:padding="@dimen/d_10"
                android:layout_height="wrap_content" />


            <ImageView
                android:id="@+id/img_flow_quiz"
                android:layout_width="@dimen/d_15"
                android:layout_height="@dimen/d_15"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/fd_10"
                android:layout_marginStart="@dimen/d_7"
                android:layout_marginEnd="@dimen/d_10"
                android:src="@drawable/ico_welcomestudent_quiz"/>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>