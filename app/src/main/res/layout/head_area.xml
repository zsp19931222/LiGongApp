<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f6">

    <LinearLayout
        android:id="@+id/head_area_current_position_rel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_50"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/head_area_current_position_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d_15"
            android:layout_weight="1"
            android:text="定位位置："
            android:textColor="@color/color_dark_333333"
            android:textSize="@dimen/s_15" />

        <LinearLayout
            android:id="@+id/head_area_refresh_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/head_area_refresh_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刷新"
                android:textColor="@color/color_blue_3da8f5"
                android:textSize="@dimen/s_15" />

            <ImageView
                android:id="@+id/head_area_refresh_image"
                android:layout_width="@dimen/d_12"
                android:layout_height="@dimen/d_11"
                android:layout_marginEnd="@dimen/d_15"
                android:layout_marginStart="@dimen/d_5"
                android:src="@drawable/area_refresh" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/head_area_all_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_50"
        android:layout_below="@id/head_area_current_position_rel"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/d_15"
        android:text="全中国"
        android:textColor="@color/color_dark_333333"
        android:textSize="@dimen/s_15"
        android:visibility="gone" />
</RelativeLayout>