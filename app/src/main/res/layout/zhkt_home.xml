<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/zhkt_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <include layout="@layout/topbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/home_buttom_layout"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/zhkt_dm_layout"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/biankuang_buttom"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/zhkt_dm_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="点名"
                android:textColor="#969696"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/zhkt_zt_layout"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/biankuang_buttom"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/zhkt_zt_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="纸条"
                android:textColor="#969696"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/zhkt_pj_layout"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/biankuang_buttom"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/zhkt_pj_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="评价"
                android:textColor="#969696"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/zhkt_bz_layout"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/biankuang_buttom"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/zhkt_bz_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="备注"
                android:textColor="#969696"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/zhkt_sj_kcmc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:drawableStart="@drawable/ico_zhkt_kc"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/d_10"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="5月3日 星期二"
                android:singleLine="true" />
            <TextView
                android:id="@+id/txt_classname"
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:focusable="true"
                android:singleLine="true"
                android:maxLines="1"
                android:maxEms="12"
                android:textColor="@color/color_bleu"
                android:text="《哈哈哈哈哈哈哈哈哈哈哈哈》"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#AAAAAA" >
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/zhkt_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>

</LinearLayout>