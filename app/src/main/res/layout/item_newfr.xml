<?xml version="1.0" encoding="utf-8"?>
<com.example.app3.tool.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/item_newfr_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/item_newfr_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/d_17"
            android:layout_marginTop="@dimen/d_14"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_newfr_image"
                android:layout_width="@dimen/d_40"
                android:layout_height="@dimen/d_40" />

            <yh.tool.widget.DragPointView
                android:id="@+id/item_newfr_xxjsq"
                android:layout_width="@dimen/d_18"
                android:layout_height="@dimen/d_18"
                android:layout_marginStart="-9dp"
                android:textColor="@color/color_white"
                android:textSize="@dimen/s_11"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_newfr_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_newfr_lin"
            android:layout_marginStart="@dimen/d_16"
            android:layout_toEndOf="@id/item_newfr_lin"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_dark_333333"
            android:textSize="@dimen/s_16" />

        <TextView
            android:id="@+id/item_newfr_text_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignBottom="@id/item_newfr_lin"
            android:layout_marginStart="@dimen/d_14"
            android:layout_toEndOf="@id/item_newfr_lin"
            android:textColor="@color/color_gray_999999"
            android:textSize="@dimen/s_14" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignStart="@id/item_newfr_text_introduce"
            android:layout_below="@id/item_newfr_text_introduce"
            android:layout_marginTop="@dimen/d_10"
            android:background="@color/color_dark_33000000" />

        <TextView
            android:id="@+id/item_newfr_text_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/d_17"
            android:layout_marginTop="@dimen/d_16"
            android:background="@drawable/border_radius_blue"
            android:paddingBottom="@dimen/d_5"
            android:paddingLeft="@dimen/d_10"
            android:paddingRight="@dimen/d_10"
            android:paddingTop="@dimen/d_5"
            android:textColor="@color/white"
            android:textSize="@dimen/s_16" />
    </RelativeLayout>

    <TextView
        android:id="@+id/item_newfr_text_del"
        android:layout_width="@dimen/d_60"
        android:layout_height="match_parent"
        android:background="#ff3b30"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/white"
        android:textSize="@dimen/s_18" />
</com.example.app3.tool.SwipeMenuLayout>