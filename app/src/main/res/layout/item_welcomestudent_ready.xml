<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/d_10"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_welcomestudent_ready"
            android:layout_width="@dimen/d_65"
            android:layout_height="@dimen/d_65"
            android:layout_marginEnd="@dimen/d_10"
            android:layout_marginStart="@dimen/d_10"
            android:layout_marginTop="@dimen/d_15"
             />

        <TextView
            android:id="@+id/txt_welcomestudent_item_ready"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d_15"
            android:layout_marginTop="@dimen/d_5"
            android:ellipsize="end"
            android:maxEms="5"
            android:maxLines="1"
            android:text="完善信息" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_welcomestudent_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/d_15"
        android:layout_marginTop="17dp" />

</FrameLayout>