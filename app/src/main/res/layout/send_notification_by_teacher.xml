<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f6"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="发送通知"
            android:textColor="@color/color_dark_333333"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/quanzi_qrtjhy_sfyz_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:src="@drawable/back3" />

        <TextView
            android:id="@+id/quanzi_qrtjhy_sfyz_fs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:text="发送"
            android:textColor="@color/blue2"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="标题" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/yuanjiao_3dp_white"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:hint="请输入标题"
            android:textSize="@dimen/s_14"
            android:gravity="start|center_vertical"
            android:paddingLeft="4dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/title_num"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#00FFFFFF"
            android:gravity="center_vertical"
            android:hint="0/50"
            android:padding="4dp"
            android:paddingLeft="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/yuanjiao_3dp_white"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="#00000000"
                android:gravity="top|start"
                android:padding="4dp" />

            <TextView
                android:id="@+id/message_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="right"
                android:hint="可用字数0/100字"
                android:padding="4dp"
                android:paddingLeft="4dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>