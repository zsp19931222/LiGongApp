<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f6">

    <com.example.app3.view.MyTitleView
        android:id="@+id/qrcode_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_48"
        app:title_bg="@color/white"
        app:title_height="@dimen/d_48"
        app:title_left_image="@drawable/back3"
        app:title_text="@string/title_activity_qr"
        app:title_text_color="@color/color_dark_333333"
        app:title_text_size="@dimen/d_15"></com.example.app3.view.MyTitleView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/qrcode_title"
        android:layout_marginLeft="@dimen/d_24"
        android:layout_marginRight="@dimen/d_24"
        android:layout_marginTop="@dimen/d_53"
        android:background="@drawable/border_radius_white"
        android:padding="@dimen/d_24">

        <ImageView
            android:id="@+id/qrcode_image_head"
            android:layout_width="@dimen/d_62"
            android:layout_height="@dimen/d_62"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/qrcode_image_head"
            android:layout_marginLeft="@dimen/d_8"
            android:layout_toRightOf="@id/qrcode_image_head"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/qrcode_text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_dark_333333"
                    android:textSize="@dimen/d_15" />

                <ImageView
                    android:id="@+id/qrcode_image_sex"
                    android:layout_width="@dimen/d_10"
                    android:layout_height="@dimen/d_10"
                    android:layout_marginLeft="@dimen/d_5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_school" />

                <TextView
                    android:id="@+id/qrcode_text_college"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_8"
                    android:textColor="@color/color_gray_a09f9d"
                    android:textSize="@dimen/d_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/qrcode_lin_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/qrcode_iamge_major"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_welcomestdent_major" />

                <TextView
                    android:id="@+id/qrcode_text_major"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_8"
                    android:textColor="@color/color_gray_a09f9d"
                    android:textSize="@dimen/d_12" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/qrcode_image_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/qrcode_image_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/d_43" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/qrcode_image_qr"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/d_35"
            android:text="扫一扫上面的二维码"
            android:textColor="@color/color_gray_999999"
            android:textSize="@dimen/d_12" />
    </RelativeLayout>
</RelativeLayout>