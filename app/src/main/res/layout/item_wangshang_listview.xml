<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_dotted_top"
            android:layout_width="@dimen/d_2"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/d_5"
            android:layout_marginStart="@dimen/d_15"
            android:layout_marginEnd="@dimen/d_10"
            android:layout_weight="1"
            android:background="@drawable/ico_dotted_top" />

        <ImageView
            android:id="@+id/img_iteme_name"
            android:layout_width="@dimen/d_30"
            android:layout_height="@dimen/d_30"
            android:layout_marginStart="@dimen/d_10"
            android:layout_marginEnd="@dimen/d_5"
            android:src="@drawable/ico_addmubiao"
            android:layout_gravity="center_horizontal"
             />

        <ImageView
            android:id="@+id/img_dotted_dow"
            android:layout_width="@dimen/d_2"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/d_15"
            android:layout_marginTop="@dimen/d_5"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/d_10"
            android:background="@drawable/ico_dotted_down" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_item_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/d_30"
        android:background="@drawable/ico_box"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/d_20"
        android:layout_marginTop="@dimen/d_10"
        android:layout_marginBottom="@dimen/d_10"
        android:text="宿舍查询"
        android:textColor="@color/color_black" />

    <ImageView
        android:id="@+id/img_iteme_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="-60dp"
        android:visibility="invisible"
        android:src="@drawable/ico_state_dui" />


</LinearLayout>