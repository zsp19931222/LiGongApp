<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d_60"
    android:layout_marginBottom="@dimen/d_5"
    android:layout_marginLeft="@dimen/d_10"
    android:layout_marginRight="@dimen/d_10"
    android:id="@+id/item_cd_rel"
    android:layout_marginTop="@dimen/d_5">

    <ImageView
        android:id="@+id/item_cd_bg_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_radius_db" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_cd_condition_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="到
勤"
            android:textColor="@color/white"
            android:textSize="@dimen/s_12" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1px"
            android:layout_weight="5"
            android:background="@drawable/border_radius_white_right"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/d_5"
            android:paddingTop="@dimen/d_5">

            <TextView
                android:id="@+id/item_cd_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名字"
                android:textColor="@color/color_dbdbdb"
                android:textSize="@dimen/s_18" />

            <TextView
                android:id="@+id/item_cd_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_4"
                android:text="学号"
                android:textColor="@color/color_dbdbdb"
                android:textSize="@dimen/s_12" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>