<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home1_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/home1_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:gravity="bottom" >
    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/tpzs1"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:layout_gravity="start"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-40dp"
        android:background="@drawable/home_newbg1"
        android:gravity="center"
        android:paddingRight="7dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tpzs2"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_gravity="start"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="-25dp"
        android:background="@drawable/home_newbg2"
        android:alpha="5"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:textColor="#FFFFFF" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="start"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/home_fenlei" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="-30dp"
        android:layout_marginTop="7dp"
        android:layout_weight="37"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/home1_function_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

</LinearLayout>