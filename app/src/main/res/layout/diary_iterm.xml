<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="0.5dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59.5dp"
        android:clickable="false"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/diary_number"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:clickable="false"
            android:gravity="center"
            android:text="fd"
            android:textColor="#969696"
            android:textSize="36dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:clickable="false"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/diary_date_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:singleLine="true"
                android:text="2016年08月16日 15:13:12"
                android:textColor="#656565"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/diary_info_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:clickable="false"
                android:singleLine="true"
                android:text="这只是一条测试数据这只是一条测试数据这只是一条测试数据这只是一条测试数据"
                android:textSize="13sp" />
        </LinearLayout>

        <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:background="@drawable/touming"
            android:clickable="false" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bfbfbf" />

</LinearLayout>