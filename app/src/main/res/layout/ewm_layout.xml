<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_ececec"
    android:orientation="vertical" >

    <include layout="@layout/topbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d_48"
            android:background="@drawable/d_corners20dp_solid_white"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/touxiang"
                    android:layout_width="@dimen/d_64"
                    android:layout_height="@dimen/d_64"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="@dimen/d_26"
                    android:background="@drawable/q1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:gravity="bottom"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="测试人员"
                        android:textColor="@color/color_dark_333333"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="计算机专业学院"
                        android:textColor="@color/color_gray_a09f9d"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="数据传输专业一班"
                        android:textColor="@color/color_gray_a09f9d"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/ewm"
                android:layout_width="@dimen/d_200"
                android:layout_height="@dimen/d_200"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/d_40"
                android:layout_marginTop="@dimen/d_45"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/version_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:text="扫一扫上面的二维码"
                android:textColor="@color/color_gray_cc999999"
                android:textSize="@dimen/s_11" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>