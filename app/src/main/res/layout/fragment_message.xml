<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_48"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/home_message_title_left"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/d_70"
            android:background="@drawable/d_biankuang_soild_touming_buttom_2dp_333333"
            android:gravity="center"
            android:text="消息"
            android:textColor="@color/color_dark_333333"
            android:textSize="17sp" />

        <Button
            android:id="@+id/home_message_title_right"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:hint="通讯录"
            android:textColor="@color/color_gray_999999"
            android:textSize="17sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
    </LinearLayout>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/color_f6"/>
    <FrameLayout
        android:id="@+id/fragment_message_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>