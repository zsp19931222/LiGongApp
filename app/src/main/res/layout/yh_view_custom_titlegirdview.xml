<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_26"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/d_8"
            android:background="@drawable/blue_rect_12_35" />

        <TextView
            android:id="@+id/txt_home_item_titleview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_dark_333333"
            android:textSize="@dimen/s_13" />

        <ImageView
            android:id="@+id/gridview_home_item_img_xyd"
            android:layout_width="@dimen/d_3"
            android:visibility="invisible"
            android:layout_height="@dimen/d_3"
            android:layout_gravity="top"
            android:layout_marginTop="2dp"
            android:background="@drawable/d_corners_1_5dp_solid_red" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_0.3"
        android:background="@color/color_gray_ececec" />

    <GridView
        android:id="@+id/gridview_home_item_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="80dp"
        android:gravity="center" >
    </GridView>

</LinearLayout>