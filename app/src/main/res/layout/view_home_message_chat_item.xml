<?xml version="1.0" encoding="utf-8"?>
<com.example.app3.tool.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d_65"
    android:background="@color/color_f6"
    android:paddingBottom="1px"
    app:leftSwipe="true"
    app:swipeEnable="true">

    <LinearLayout
        android:id="@+id/item_message_lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ripple"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/d_11"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_message_image_user"
                android:layout_width="@dimen/d_48"
                android:layout_height="@dimen/d_48"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                />

            <yh.tool.widget.DragPointView
                android:id="@+id/xxjsq"
                android:layout_width="@dimen/d_18"
                android:layout_height="@dimen/d_18"
                android:layout_marginStart="-9dp"
                android:textColor="@color/color_white"
                android:textSize="@dimen/s_11" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/d_2"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d_5"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_message_text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_dark_333333"
                    android:textSize="@dimen/s_16" />

                <TextView
                    android:id="@+id/item_message_text_from"
                    android:layout_width="@dimen/d_32"
                    android:layout_height="@dimen/d_15"
                    android:layout_marginStart="@dimen/d_7"
                    android:background="@drawable/d_biankuang_corners_2dp_stroke_333333_solid_white"
                    android:gravity="center"
                    android:text="老师"
                    android:textColor="@color/color_dark_333333"
                    android:textSize="@dimen/s_11" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_message_text_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对的，老司机开车了"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/color_gray_999999"
                android:textSize="@dimen/s_13" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_message_text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/d_8"
            android:layout_marginTop="@dimen/d_11"
            android:text="上午 9:55"
            android:textColor="@color/color_gray_cc999999"
            android:textSize="@dimen/s_12" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_message_text_messageTop"
        android:layout_width="@dimen/d_100"
        android:layout_height="match_parent"
        android:background="@color/listBg"
        android:gravity="center"
        android:text="消息置顶"
        android:textColor="@color/white"
        android:textSize="@dimen/s_18" />

    <TextView
        android:id="@+id/item_message_text_del"
        android:layout_width="@dimen/d_60"
        android:layout_height="match_parent"
        android:background="#ff3b30"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/white"
        android:textSize="@dimen/s_18" />
</com.example.app3.tool.SwipeMenuLayout>