<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/biankuang_buttom"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/quanzi_wode_sub"
        android:layout_width="fill_parent"
        android:layout_height="80dp" >

        <ImageView
            android:id="@+id/qztp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/q1" />

        <TextView
            android:id="@+id/qzmc"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_alignTop="@+id/qztp"
            android:layout_marginLeft="21dp"
            android:layout_toRightOf="@+id/qztp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/qzrs"
            android:layout_alignLeft="@+id/qzmc"
            android:src="@drawable/quanzi_wode_renshu" />

        <TextView
            android:id="@+id/qzrs"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_alignBottom="@+id/qztp"
            android:layout_toRightOf="@+id/imageView1" />

        <TextView
            android:id="@+id/qzxxs"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="48dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/qzrs"
            android:layout_toLeftOf="@+id/qzxxs"
            android:src="@drawable/quanzi_wode_xiaoxishu" />

    </RelativeLayout>

</LinearLayout>