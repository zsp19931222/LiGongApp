<?xml version="1.0" encoding="utf-8"?>
<com.example.app3.tool.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:leftSwipe="true"
    app:swipeEnable="true"
    >

    <RelativeLayout
        android:background="@drawable/ripple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/item_subscribe_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/d_8"
            android:paddingLeft="@dimen/d_11"
            android:paddingRight="@dimen/d_11"
            android:paddingTop="@dimen/d_8">

            <RelativeLayout
                android:id="@+id/item_subscribe_rel_image"
                android:layout_width="@dimen/d_52"
                android:layout_height="@dimen/d_52">

                <ImageView
                    android:id="@+id/item_subscribe_image"
                    android:layout_width="@dimen/d_48"
                    android:layout_height="@dimen/d_48"
                    android:scaleType="fitXY"
                    />

                <TextView
                    android:id="@+id/item_subscribe_text_messageNum"
                    android:layout_width="@dimen/d_18"
                    android:layout_height="@dimen/d_18"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:background="@drawable/circle_red"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/s_12" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d_9"
                android:layout_toRightOf="@id/item_subscribe_rel_image"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_0"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_subscribe_text_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_dark_333333"
                        android:textSize="@dimen/s_16" />

                    <TextView
                        android:id="@+id/item_subscribe_text_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_7"
                        android:background="@drawable/border_radius_999"
                        android:gravity="center"
                        android:paddingBottom="@dimen/d_3"
                        android:visibility="gone"
                        android:paddingLeft="@dimen/d_4"
                        android:paddingRight="@dimen/d_4"
                        android:paddingTop="@dimen/d_3"
                        android:textSize="@dimen/s_10" />

                    <TextView
                        android:id="@+id/item_subscribe_text_time"
                        android:layout_width="@dimen/d_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/tab_font"
                        android:textSize="@dimen/s_12" />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_subscribe_text_message"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_0"
                    android:layout_marginTop="@dimen/d_8"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textColor="@color/color_b9"
                    android:textSize="@dimen/s_13" />

            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/item_subscribe_rel"
            android:layout_marginLeft="@dimen/d_65"
            android:background="@color/color_gray_ececec" />

    </RelativeLayout>

    <TextView
        android:id="@+id/item_subscribe_text_cancel"
        android:layout_width="@dimen/d_100"
        android:layout_height="match_parent"
        android:background="@color/redColor"
        android:gravity="center"
        android:text="取消订阅"
        android:textColor="@color/white"
        android:textSize="@dimen/s_18" />
</com.example.app3.tool.SwipeMenuLayout>