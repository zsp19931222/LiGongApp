<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yunhuakeji.app.ui.activity.WelcomeStudentActivity">


    <LinearLayout
        android:id="@+id/ly_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_rectangular_border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_ready"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/s_18"
            android:textColor="@color/color_bleu"
            android:gravity="center"
            android:padding="@dimen/d_15"
            android:text="@string/str_ready" />

        <TextView
            android:id="@+id/txt_flow"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="@dimen/s_18"
            android:gravity="center"
            android:textColor="@color/color_black"
            android:padding="@dimen/d_15"
            android:layout_height="wrap_content"
            android:text="@string/str_flow" />

        <TextView
            android:id="@+id/txt_personal_data"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/s_18"
            android:textColor="@color/color_black"
            android:gravity="center"
            android:padding="@dimen/d_15"
            android:text="@string/str_personaldata" />

    </LinearLayout>


    <yh.tool.widget.MViewPage
        android:id="@+id/vp_welcome_student"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ly_bottom"
        >

    </yh.tool.widget.MViewPage>

</RelativeLayout>
