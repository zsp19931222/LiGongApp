<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_back_gray_normal"
    android:orientation="vertical">

    <!--<include layout="@layout/item_topbar_center_title_not_close" />-->
    <com.example.app3.view.MyTitleView
        android:id="@+id/myself_feedback_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_48"
        app:title_bg="@color/white"
        app:title_height="@dimen/d_48"
        app:title_left_image="@drawable/back3"
        app:title_text="@string/str_set_feedback"
        app:title_text_color="@color/color_dark_333333"
        app:title_text_size="@dimen/d_15" />

    <LinearLayout
        android:id="@+id/myself_feedback_linear_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_150"
        android:layout_marginEnd="@dimen/d_13"
        android:layout_marginStart="@dimen/d_13"
        android:layout_marginTop="@dimen/d_26"
        android:background="@drawable/d_corners5dp_solid_white"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="top|start"
            android:hint="@string/feedback_suggest_content"
            android:paddingBottom="@dimen/d_11"
            android:paddingEnd="@dimen/d_12"
            android:paddingStart="@dimen/d_12"
            android:paddingTop="@dimen/d_11"
            android:textColor="@color/color_dark_333333"
            android:textSize="@dimen/s_12" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="end|center_vertical"
            android:paddingBottom="@dimen/d_11"
            android:paddingEnd="@dimen/d_12"
            android:paddingStart="@dimen/d_1"
            android:paddingTop="@dimen/d_1"
            android:text="0/500"
            android:textColor="@color/color_gray_999999" />
    </LinearLayout>

    <EditText
        android:id="@+id/myself_feedback_et_mail_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_44"
        android:layout_marginEnd="@dimen/d_13"
        android:layout_marginStart="@dimen/d_13"
        android:layout_marginTop="@dimen/d_15"
        android:background="@drawable/d_corners5dp_solid_white"
        android:gravity="center_vertical"
        android:hint="@string/feedback_phone_or_email_content"
        android:paddingEnd="@dimen/d_12"
        android:paddingStart="@dimen/d_12"
        android:singleLine="true"
        android:textColor="@color/color_dark_333333"
        android:textSize="@dimen/s_12" />

    <Button
        android:id="@+id/myself_feedback_btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_45"
        android:layout_marginEnd="@dimen/d_13"
        android:layout_marginStart="@dimen/d_13"
        android:layout_marginTop="@dimen/d_14"
        android:background="@drawable/d_click_button_blue"
        android:text="@string/str_feedback_submit"
        android:textColor="@color/white"
        android:textSize="@dimen/s_18" />

</LinearLayout>