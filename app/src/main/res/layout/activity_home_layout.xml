<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/home_linear"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"></LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_dark_33000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/d_3"
        android:paddingTop="@dimen/d_3">

        <RelativeLayout
            android:id="@+id/home_txt_buttom_sy_rel"
            android:layout_width="@dimen/d_0"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/home_txt_buttom_sy_lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_txt_buttom_sy_image"
                    android:layout_width="@dimen/d_25"
                    android:layout_height="@dimen/d_25"
                    android:src="@drawable/home_button_buttom_sy_n" />

                <TextView
                    android:id="@+id/home_txt_buttom_sy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d_3"
                    android:gravity="center"
                    android:text="@string/str_home_home"
                    android:textColor="@color/color_gray_666666"
                    android:textSize="@dimen/s_14" />
            </LinearLayout>

            <ImageView
                android:id="@+id/home_image_buttom_hint"
                android:layout_width="@dimen/d_5"
                android:layout_height="@dimen/d_5"
                android:layout_alignTop="@id/home_txt_buttom_sy_lin"
                android:layout_toRightOf="@id/home_txt_buttom_sy_lin"
                android:background="@drawable/circle_red"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_txt_buttom_xx_rel"
            android:layout_width="@dimen/d_0"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/home_txt_buttom_xx_lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_txt_buttom_xx_image"
                    android:layout_width="@dimen/d_25"
                    android:layout_height="@dimen/d_25"
                    android:src="@drawable/home_button_buttom_xx_n" />

                <TextView
                    android:id="@+id/home_txt_buttom_xx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d_3"
                    android:gravity="center"
                    android:text="@string/str_home_message"
                    android:textColor="@color/color_gray_666666"
                    android:textSize="@dimen/s_14" />
            </LinearLayout>

            <yh.tool.widget.DragPointView
                android:id="@+id/home_txt_buttom_xx_num"
                android:layout_width="@dimen/d_18"
                android:layout_height="@dimen/d_18"
                android:layout_marginStart="-5dp"
                android:layout_marginTop="@dimen/d_2"
                android:layout_toRightOf="@id/home_txt_buttom_xx_lin"
                android:textColor="@color/color_white"
                android:textSize="@dimen/s_11" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_txt_buttom_wd_rel"
            android:layout_width="@dimen/d_0"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_txt_buttom_wd_image"
                    android:layout_width="@dimen/d_25"
                    android:layout_height="@dimen/d_25"
                    android:src="@drawable/home_button_buttom_wd_n" />

                <TextView
                    android:id="@+id/home_txt_buttom_wd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d_3"
                    android:gravity="center"
                    android:text="@string/str_home_personal"
                    android:textColor="@color/color_gray_666666"
                    android:textSize="@dimen/s_14" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>