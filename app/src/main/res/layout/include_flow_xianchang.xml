<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/d_13"
        android:layout_marginBottom="@dimen/d_15"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/d_15"
                android:drawablePadding="@dimen/d_3"
                android:drawableStart="@drawable/ico_welcomestudent_bar"
                android:text="@string/str_flow_xianchang"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_1"
            android:background="@drawable/shape_line" />

        <yh.tool.widget.ScrollGridview
            android:id="@+id/gv_xianchang_ready"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/d_15"
            android:background="@color/white"
            android:listSelector="@android:color/transparent"
            android:numColumns="3" >
        </yh.tool.widget.ScrollGridview>
    </LinearLayout>

</LinearLayout>