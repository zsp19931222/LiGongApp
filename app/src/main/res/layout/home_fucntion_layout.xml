<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal" >

    <TextView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:textColor="#696969" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/wdtsbj1"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginBottom="-4dp"
            android:layout_marginLeft="18dp"
            android:background="@drawable/wdtsbj"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/home_function_img1"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/home_function_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="#696969"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/wdtsbj2"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginBottom="-5dp"
            android:layout_marginLeft="17dp"
            android:background="@drawable/wdtsbj"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/home_function_img2"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/home_function_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="#696969"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/wdtsbj3"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginBottom="-4dp"
            android:layout_marginLeft="18dp"
            android:background="@drawable/wdtsbj"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/home_function_img3"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/home_function_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="#696969"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/wdtsbj4"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginBottom="-4dp"
            android:layout_marginLeft="18dp"
            android:background="@drawable/wdtsbj"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/home_function_img4"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/home_function_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="#696969"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:textColor="#696969" />

</LinearLayout>