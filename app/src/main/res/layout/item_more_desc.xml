<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/more_item_desc_lin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple"
    android:clickable="true"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/d_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_f1" />

        <ImageView
            android:id="@+id/more_item_desc_image"
            android:layout_width="@dimen/d_30"
            android:layout_height="@dimen/d_30"
            android:layout_marginTop="@dimen/d_24"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/more_item_desc_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d_14"
            android:layout_marginTop="@dimen/d_10"
            android:singleLine="true"
            android:textColor="@color/color_5d"
            android:textSize="@dimen/d_12" />
    </LinearLayout>

    <ImageView
        android:id="@+id/more_item_desc_image_cutLine"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/color_f1" />
</LinearLayout>