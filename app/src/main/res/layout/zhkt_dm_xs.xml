<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sc"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <include layout="@layout/zhkt_dm_sj_layout" >
        </include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/zhkt_djs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textColor="#27BDFC"
                    android:textSize="90sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="秒"
                    android:textColor="#27BDFC"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/zhkt_sjyzm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="请输入提示数字后摇动你的手机"
                android:textColor="#696969"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/zhkt_yzm"
                android:layout_width="230dp"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:inputType="number"
                android:paddingLeft="5dp"
                android:textColor="#FF8442"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/zhkt_ts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/color_orage"
                />

            <ImageView
                android:id="@+id/zhkt_yytp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/yaoyiyao_07" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>