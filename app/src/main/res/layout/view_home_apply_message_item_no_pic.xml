<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_persona_bggray" />

    <include layout="@layout/view_home_apply_message_item_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_persona_bggray" />

    <LinearLayout
        android:id="@+id/no_pic_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/no_pic_txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingBottom="5dp"
            android:paddingEnd="11dp"
            android:paddingStart="11dp"
            android:paddingTop="14dp"
            android:singleLine="true"
            android:text="都是废话当升科技复合大师空间发的灰色空间佛挡杀佛会计电算化三德科技复合大师空间发货速度空间发货速度加快"
            android:textColor="#5d5d5d"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/no_pic_txt_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="11dp"
            android:paddingEnd="11dp"
            android:paddingStart="11dp"
            android:text="都是废话当升科技复合大师空间发的灰色空间佛挡杀佛会计电算化三德科技复合大师空间发货速度空间发货速度加快都是废话当升科技复合大师空间发的灰色空间佛挡杀佛会计电算化三德科技复合大师空间发货速度空间发货速度加快都是废话当升科技复合大师空间发的灰色空间佛挡杀佛会计电算化三德科技复合大师空间发货速度空间发货速度加快"
            android:textColor="#5d5d5d"
            android:textSize="11sp" />
    </LinearLayout>
    <!--<include layout="@layout/view_home_apply_message_item_more" />-->
    <TextView
        android:id="@+id/no_pic_text_more"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@color/color_persona_bggray"
        android:gravity="center"
        android:text="@string/str_home_more"
        android:textColor="@color/color_gray_999999"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E1E6E8" />

</LinearLayout>