<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_back_gray_normal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/head_address_lin_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d_11"
        android:layout_marginEnd="@dimen/d_11"
        android:layout_marginStart="@dimen/d_11"
        android:layout_marginTop="@dimen/d_11"
        android:background="@drawable/d_corners_3dp_solid_white"
        android:gravity="center">

        <TextView
            android:id="@+id/serch_et_input"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d_27"
            android:background="@color/touming"
            android:drawablePadding="@dimen/d_9"
            android:drawableStart="@drawable/serch_32_32"
            android:gravity="center"
            android:hint="@string/sercher"
            android:textSize="@dimen/s_12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/head_address_lin_sys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/d_17"
        android:paddingBottom="@dimen/d_10"
        android:paddingTop="@dimen/d_14">

        <ImageView
            android:id="@+id/item_newfr_image"
            android:layout_width="@dimen/d_40"
            android:layout_height="@dimen/d_40"
            android:scaleType="fitXY"
            android:src="@drawable/sys" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_16"
            android:text="扫一扫添加好友"
            android:textColor="@color/color_dark_333333"
            android:textSize="@dimen/d_16" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/d_73"
        android:background="@color/color_dark_33000000" />
</LinearLayout>