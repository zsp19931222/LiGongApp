<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_university"
    android:orientation="vertical">

    <com.example.app3.view.MyTitleView
        android:id="@+id/mv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_48"
        app:title_bg="@color/transparent"
        app:title_height="@dimen/d_48"
        app:title_left_image="@drawable/back_v3"
        app:title_text="个人信息验证"
        app:title_text_color="@color/color_dark_333333"
        app:title_text_size="@dimen/d_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/d_45"
        android:layout_marginStart="@dimen/d_45"
        android:layout_marginTop="@dimen/d_50"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/mv_old_ed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入原手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/color_dark_333333"
            android:textColorHint="@color/color_bbbbbb"
            android:textSize="@dimen/s_14" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/mv_old_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/right" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginEnd="@dimen/d_35"
        android:layout_marginStart="@dimen/d_35"
        android:layout_marginTop="@dimen/d_12"
        android:background="@color/color_bbbbbb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/d_45"
        android:layout_marginStart="@dimen/d_45"
        android:layout_marginTop="@dimen/d_26"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/mv_work_num_ed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入学号/教职工号"
            android:inputType="number"
            android:textColor="@color/color_dark_333333"
            android:textColorHint="@color/color_bbbbbb"
            android:textSize="@dimen/s_14" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/mv_work_num_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/right" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginEnd="@dimen/d_35"
        android:layout_marginStart="@dimen/d_35"
        android:layout_marginTop="@dimen/d_12"
        android:background="@color/color_bbbbbb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/d_45"
        android:layout_marginStart="@dimen/d_45"
        android:layout_marginTop="@dimen/d_26"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/mv_id_num_ed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入身份证后六位"
            android:maxLength="6"
            android:textColor="@color/color_dark_333333"
            android:textColorHint="@color/color_bbbbbb"
            android:textSize="@dimen/s_14" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/mv_id_num_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/right" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginEnd="@dimen/d_35"
        android:layout_marginStart="@dimen/d_35"
        android:layout_marginTop="@dimen/d_12"
        android:background="@color/color_bbbbbb" />

    <Button
        android:id="@+id/mv_next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/d_65"
        android:background="@drawable/border_shade_e5e9ee"
        android:gravity="center"
        android:paddingBottom="@dimen/d_15"
        android:paddingEnd="@dimen/d_100"
        android:paddingStart="@dimen/d_100"
        android:paddingTop="@dimen/d_15"
        android:textColor="@color/white"
        android:textSize="@dimen/s_18" />
</LinearLayout>