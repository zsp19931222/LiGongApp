<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 阴影部分 最下面一层 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#a1c2da"
                android:startColor="#a1c2da" />
            <corners android:radius="90px" />
        </shape>
    </item>
    <item
        android:bottom="1px"
        android:right="1px"
        android:top="0px"
        android:left="0px">
        <selector>
            <item
                android:state_focused="false"
                android:state_pressed="true">
                <shape android:shape="rectangle">

                    <solid android:color="#a1c2da" />
                    <corners android:radius="90px" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#3da8f5" />

                    <corners android:radius="90px" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>