<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 阴影部分 最下面一层 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#ebf1f4"
                android:startColor="#ebf1f4" />
            <corners android:radius="20px" />
        </shape>
    </item>
    <!-- 背景部分 -->
    <!-- 形象的表达：bottom left ... 类似于设置 margin -->
    <item
        android:bottom="1dp"
        android:left="@dimen/d_1"
        android:right="1dp"
        android:top="@dimen/d_1">
        <selector>
            <item
                android:state_focused="false"
                android:state_pressed="true">
                <shape android:shape="rectangle">

                    <solid android:color="#ebf1f4" />
                    <corners android:radius="20px" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="0"
                        android:endColor="#f6f6f6"
                        android:startColor="#f6f6f6" />
                    <corners android:radius="20px" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>