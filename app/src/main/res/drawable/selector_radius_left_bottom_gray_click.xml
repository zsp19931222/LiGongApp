<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <solid android:color="@color/color_white"></solid>
            <corners  android:bottomLeftRadius="@dimen/d_8"></corners>
            <stroke
                android:width="@dimen/d_1"
                android:color="@color/color_white"></stroke>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/color_persona_bggray"></solid>
            <corners  android:bottomLeftRadius="@dimen/d_8"></corners>
            <stroke
                android:width="@dimen/d_1"
                android:color="@color/color_persona_bggray"></stroke>
        </shape>
    </item>
</selector>